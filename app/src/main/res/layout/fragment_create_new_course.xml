<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sign_up"
    android:orientation="vertical"
    tools:context=".admin.Create_new_course">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/montserratbold"
        android:text="Admin Create Course"
        android:textColor="#646464"
        android:textSize="40sp" />



        <EditText
            android:id="@+id/courseTitle"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/textview_background"
            android:drawablePadding="12dp"
            android:hint="courseTitle"
            android:maxLength="20"
            android:paddingStart="20dp"
            android:paddingRight="25dp"
            android:textColorHint="#979797" />

    <EditText
        android:id="@+id/courseMainTopics"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:drawablePadding="12dp"
        android:hint="course Main topics"
        android:maxLength="20"
        android:paddingStart="20dp"
        android:paddingRight="25dp"
        android:textColorHint="#979797" />

    <EditText
        android:id="@+id/prerequisites"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/textview_background"
        android:drawablePadding="12dp"
        android:hint="prerequisites"
        android:paddingStart="20dp"
        android:paddingRight="25dp"
        android:textColorHint="#979797" />


    <Button
        android:id="@+id/upload"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/register_buttons"
        android:fontFamily="@font/montserratregular"
        android:text="upload photo"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <Button
        android:id="@+id/create"
        android:layout_width="163dp"
        android:layout_height="62dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="125dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/register_buttons"
        android:fontFamily="@font/montserratregular"
        android:text="create"
        android:textColor="#ffffff"
        android:textSize="20sp" />
</LinearLayout>